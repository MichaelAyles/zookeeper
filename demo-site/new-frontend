import React, { useState } from 'react';

// ZOOKEEPER v3 - The Sweet Spot
// Warm & approachable, but grown-up. Camera-forward, but friendly.
// Think: Duolingo's polish meets Airbnb's warmth

const ZookeeperV3 = () => {
  const [activeScreen, setActiveScreen] = useState('all');
  
  const screens = [
    { id: 'all', label: 'All Screens' },
    { id: 'home', label: 'Home' },
    { id: 'camera', label: 'Camera' },
    { id: 'discovery', label: 'Discovery' },
    { id: 'collection', label: 'Collection' },
  ];

  return (
    <div style={{
      minHeight: '100vh',
      background: 'linear-gradient(180deg, #F7F4EE 0%, #EDE8DE 100%)',
      padding: '40px 24px',
      fontFamily: "'Inter', -apple-system, BlinkMacSystemFont, sans-serif",
    }}>
      {/* Header */}
      <div style={{ textAlign: 'center', marginBottom: '32px' }}>
        <div style={{
          display: 'inline-flex',
          alignItems: 'center',
          gap: '12px',
          marginBottom: '8px',
        }}>
          <div style={{
            width: '44px',
            height: '44px',
            background: '#2D5A3D',
            borderRadius: '12px',
            display: 'flex',
            alignItems: 'center',
            justifyContent: 'center',
            fontSize: '22px',
          }}>
            ü¶Å
          </div>
          <h1 style={{
            fontSize: '28px',
            fontWeight: '700',
            color: '#1a2e1a',
            margin: 0,
          }}>
            Zookeeper
          </h1>
        </div>
        <p style={{
          fontSize: '14px',
          color: '#6b7c6b',
          margin: 0,
        }}>
          Track your wildlife adventures
        </p>
      </div>

      {/* Screen Selector */}
      <div style={{
        display: 'flex',
        justifyContent: 'center',
        gap: '8px',
        marginBottom: '40px',
        flexWrap: 'wrap',
      }}>
        {screens.map(screen => (
          <button
            key={screen.id}
            onClick={() => setActiveScreen(screen.id)}
            style={{
              padding: '10px 20px',
              borderRadius: '12px',
              border: 'none',
              background: activeScreen === screen.id ? '#2D5A3D' : '#fff',
              color: activeScreen === screen.id ? '#fff' : '#2D5A3D',
              fontSize: '14px',
              fontWeight: '600',
              cursor: 'pointer',
              boxShadow: activeScreen === screen.id 
                ? '0 4px 12px rgba(45, 90, 61, 0.3)' 
                : '0 2px 8px rgba(0,0,0,0.06)',
              transition: 'all 0.2s ease',
            }}
          >
            {screen.label}
          </button>
        ))}
      </div>

      {/* Phone Mockups */}
      <div style={{
        display: 'flex',
        justifyContent: 'center',
        gap: '32px',
        flexWrap: 'wrap',
        maxWidth: '1400px',
        margin: '0 auto',
      }}>
        {(activeScreen === 'all' || activeScreen === 'home') && <HomeScreen />}
        {(activeScreen === 'all' || activeScreen === 'camera') && <CameraScreen />}
        {(activeScreen === 'all' || activeScreen === 'discovery') && <DiscoveryScreen />}
        {(activeScreen === 'all' || activeScreen === 'collection') && <CollectionScreen />}
      </div>
    </div>
  );
};

